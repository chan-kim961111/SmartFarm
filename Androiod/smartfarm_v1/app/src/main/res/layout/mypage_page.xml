<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/mypage_nickname"
        android:layout_width="200dp"
        android:layout_height="34dp"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:hint="닉네임"
        android:textAlignment="viewStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/changemyinformation_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:background="@color/White"
        android:elevation="1dp"
        android:text="내 정보 수정"
        app:layout_constraintTop_toBottomOf="@+id/mypage_nickname"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/notification_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:text="공지사항"
        app:layout_constraintTop_toBottomOf="@+id/changemyinformation_button"
        tools:layout_editor_absoluteX="-16dp"
        android:background="@color/White"
        android:elevation="1dp"/>

    <Button
        android:id="@+id/event_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:text="이벤트"
        app:layout_constraintTop_toBottomOf="@+id/notification_button"
        tools:layout_editor_absoluteX="0dp"
        android:background="@color/White"
        android:elevation="1dp"/>

    <Button
        android:id="@+id/inquiry_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:text="1대1 문의"
        app:layout_constraintTop_toBottomOf="@+id/event_button"
        tools:layout_editor_absoluteX="16dp"
        android:background="@color/White"
        android:elevation="1dp"/>

    <Button
        android:id="@+id/version_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:text="현재 버전"
        app:layout_constraintTop_toBottomOf="@+id/inquiry_button"
        tools:layout_editor_absoluteX="0dp"
        android:background="@color/White"
        android:elevation="1dp"/>

    <Button
        android:id="@+id/logout_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:text="로그아웃"
        app:layout_constraintTop_toBottomOf="@+id/version_button"
        tools:layout_editor_absoluteX="-16dp"
        android:background="@color/White"
        android:elevation="1dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>